<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.uihyun.medic.ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="20dp"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/result_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/result_image"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageView
                android:id="@+id/guide_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/guide_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/guide_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/guide_usage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/guide_usage_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/guide_what"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/guide_what_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/guide_how"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/guide_how_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/guide_store"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:layout_marginTop="20dp"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/guide_store_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#656565"
            android:textSize="18dp" />
    </LinearLayout>
</ScrollView>
